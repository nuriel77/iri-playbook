[Unit]
Description=IOTA Field Exporter
After=network.target docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
EnvironmentFile=-{{ config_dir }}/field-exporter
ExecStartPre=-/usr/bin/docker rm %p
ExecStart=/usr/bin/docker run \
  --name %p \
  --hostname %p \
  --user {{ promuser_uid.stdout }} \
  --net={{ iri_net_name }} \
  --cap-drop=ALL \
  -v /etc/localtime:/etc/localtime:ro,Z \
  -v ${CONFIG_FILE}:/app/config.js:ro,Z \
  -p ${BIND_ADDRESS}:${BIND_PORT}:${BIND_PORT} \
  $DOCKER_OPTS \
  {{ field_exporter_image }}:${TAG}

ExecStop=/usr/bin/docker stop %p
ExecReload=/usr/bin/docker restart %p

[Install]
WantedBy=multi-user.target
